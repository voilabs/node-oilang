{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Preserve",
        "strict": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "rootDir": "./src"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
